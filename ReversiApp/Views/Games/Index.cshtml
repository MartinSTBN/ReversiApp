@model IEnumerable<ReversiApp.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Game rooms</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Omschrijving)
            </td>
            <td>
                <a asp-controller="Game" asp-action="Reversi" asp-route-id="@item.GameID">Join</a>
                @if (User.IsInRole("Administrator"))
                {
                    <a asp-action="Edit" asp-route-id="@item.GameID">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.GameID"> Details </a>
                    <a asp-action="Delete" asp-route-id="@item.GameID"> Delete </a>
                }

            </td>
        </tr>
}
    </tbody>
</table>
